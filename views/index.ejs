<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GTFS Map</title>
</head>
<body>
    
    <ul>
        <% for (let route of routes) { %> 
            <li><a href="/<%=route.route_id%>"><%= route.route_short_name %> / <%= route.route_long_name %></a></li>
        <% } %> 
    </ul>

    <form action="/" method="GET">
        <label for="pageSelection">Go to Page</label>
        <select name="page" id="pageSelection">
            <% for (let i = 1; i <= Math.ceil(length/50); i++) {%>
                <option value="<%=i%>" <%= i==page ? 'selected' : ''%>><%=i%></option>
            <% } %>  
        </select>
        <button>Submit</button>
    </form>

</body>
</html>